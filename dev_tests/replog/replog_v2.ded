node(Node, Neighbor)@next :- node(Node, Neighbor);
log(Node, Pload)@next :- log(Node, Pload);
log(Node2, Pload)@async :- log(Node1, Pload), node(Node1, Node2);
log(N, P) :- bcast(N, P);
bcast(N, P)@next :- log(N, P);

